{
  "extends": "./tsconfig.json", // ✅ 루트 설정 상속
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "scripts"]
}
